<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LibraryApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheLibrary"
        tools:targetApi="31">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.BookListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BookDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AboutBookActivity"
            android:exported="true" />
        <activity
            android:name=".activities.BookRatingAndReviewActivity"
            android:exported="false" />

        <activity
            android:name=".activities.NewShelfActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ShelfDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddToShelvesActivity"
            android:exported="false" />

        <activity
            android:name=".activities.BookSearchActivity"
            android:exported="false" />

    </application>

</manifest>